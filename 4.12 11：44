#define FFT_SIZE 2048
#define k 3.846
#define M_PI 3.1415926
#define kADC1 745
#define kADC2 752.5
#define judge 0.03f
#define SAMPLING_RATE  50000  // 实际采样率，单位 Hz
#define SAMPLE_RATE  50000  // 实际采样率，单位 Hz
